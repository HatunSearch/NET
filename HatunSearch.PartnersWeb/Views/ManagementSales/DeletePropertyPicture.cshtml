@using HatunSearch.Entities;
@using HatunSearch.PartnersWeb.Globalization;
@model PropertyPictureDTO
@{
	Layout = "~/Views/Management/Layout.cshtml";
	LocalizationProvider localization = ViewBag.LocalizationProvider as LocalizationProvider;
	string areYouSureYouWantToDeleteThis = localization["AreYouSureYouWantToDeleteThis"], delete = localization["Delete"], deleteAPropertyPicture = localization["DeleteAPropertyPicture"];
	ViewBag.Title = deleteAPropertyPicture;
	ViewBag.AdditionalStylesheets = new string[] { "Management", "ManagementSales.DeletePropertyPicture" };
	ViewBag.IsBackButtonEnabled = true;
	ViewBag.PreviousPage = Url.Action("ViewProperty", new { id = (Guid)ViewBag.PropertyId });
}
<md:dialog isFullScreen="false" type="confirmation">
	<form action="@Url.Action("DeletePropertyPicture")" method="post">
		<md:dcontentarea>
			<md:h6>@deleteAPropertyPicture</md:h6>
			<md:h6>@areYouSureYouWantToDeleteThis</md:h6>
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Id).ToString()]</md:subtitle2>
			<md:subtitle1>@Model.Id</md:subtitle1>
			<md:subtitle2>@localization["Picture"]</md:subtitle2>
			<img src="~/img/@(Model.Id).bin" />
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Description).ToString()]</md:subtitle2>
			<md:subtitle1>@Model.Description</md:subtitle1>
		</md:dcontentarea>
		<md:dactionarea alignment="horizontal">
			<md:dbutton>
				<button>@delete</button>
			</md:dbutton>
		</md:dactionarea>
	</form>
</md:dialog>