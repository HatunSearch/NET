@using HatunSearch.Entities;
@using HatunSearch.PartnersWeb.Globalization;
@model CustomerQuestionDTO
@{
	Layout = "~/Views/Management/Layout.cshtml";
	LocalizationProvider localization = ViewBag.LocalizationProvider as LocalizationProvider;
	string dateTimeFormat = localization["DateTimeFormat"];
	ViewBag.Title = localization["QuestionDetails"];
	ViewBag.AdditionalStylesheets = new string[] { "Management", "ManagementSales.ViewCustomerQuestion" };
	ViewBag.IsBackButtonEnabled = true;
	ViewBag.PreviousPage = Url.Action("CustomersQuestions");
}
<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Id).ToString()]</md:subtitle2>
<md:subtitle1>@Model.Id</md:subtitle1>
<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Customer).ToString()]</md:subtitle2>
<md:subtitle1>@Model.Customer.FullName</md:subtitle1>
<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Property).ToString()]</md:subtitle2>
<md:subtitle1>@Model.Property.Name</md:subtitle1>
<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Question).ToString()]</md:subtitle2>
<md:subtitle1>@Model.Question</md:subtitle1>
<md:subtitle2>@localization[Html.DisplayNameFor(model => model.QuestionTimeStamp).ToString()]</md:subtitle2>
<md:subtitle1>@Model.QuestionTimeStamp.ToString(dateTimeFormat) (UTC)</md:subtitle1>
@if (Model.Answer != null)
{
	<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Answer).ToString()]</md:subtitle2>
	<md:subtitle1>@Model.Answer</md:subtitle1>
	<md:subtitle2>@localization[Html.DisplayNameFor(model => model.AnswerTimeStamp).ToString()]</md:subtitle2>
	<md:subtitle1>@(Model.AnswerTimeStamp?.ToString(dateTimeFormat)) (UTC)</md:subtitle1>
}
else
{
	<md:floatingactionbutton type="regular" urlaction="@Url.Action("AnswerQuestion")">
		<md:icon>
			<svg viewBox="0 0 24 24">
				<path d="M10,9V5L3,12L10,19V14.9C15,14.9 18.5,16.5 21,20C20,15 17,10 10,9Z" />
			</svg>
		</md:icon>
	</md:floatingactionbutton>
}