@using HatunSearch.Entities;
@using HatunSearch.PartnersWeb.Globalization;
@model PropertyFeatureDetailDTO
@{
	Layout = "~/Views/Management/Layout.cshtml";
	LocalizationProvider localization = ViewBag.LocalizationProvider as LocalizationProvider;
	string areYouSureYouWantToDeleteThis = localization["AreYouSureYouWantToDeleteThis"], delete = localization["Delete"], deleteAPropertyFeature = localization["DeleteAPropertyFeature"];
	IEnumerable<PropertyFeatureDTO> features = ViewBag.Features as IEnumerable<PropertyFeatureDTO>;
	ViewBag.Title = deleteAPropertyFeature;
	ViewBag.AdditionalStylesheets = new string[] { "Management" };
	ViewBag.IsBackButtonEnabled = true;
	ViewBag.PreviousPage = Url.Action("ViewProperty", new { id = (Guid)ViewBag.PropertyId });
}
<md:dialog isFullScreen="false" type="confirmation">
	<form action="@Url.Action("DeletePropertyFeature")" method="post">
		<md:dcontentarea>
			<md:h6>@deleteAPropertyFeature</md:h6>
			<md:h6>@areYouSureYouWantToDeleteThis</md:h6>
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Feature).ToString()]</md:subtitle2>
			<md:subtitle1>@Model.Feature.DisplayName</md:subtitle1>
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Value).ToString()]</md:subtitle2>
			<md:subtitle1>@Model.Value</md:subtitle1>
		</md:dcontentarea>
		<md:dactionarea alignment="horizontal">
			<md:dbutton>
				<button>@delete</button>
			</md:dbutton>
		</md:dactionarea>
	</form>
</md:dialog>