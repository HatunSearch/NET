@using HatunSearch.Entities;
@using HatunSearch.PartnersWeb.Globalization;
@model PartnerCardDTO
@{
	Layout = "~/Views/Management/Layout.cshtml";
	LocalizationProvider localization = ViewBag.LocalizationProvider as LocalizationProvider;
	string areYouSureYouWantToDeleteThis = localization["AreYouSureYouWantToDeleteThis"], brand = Model.Brand, deleteACreditCard = localization["DeleteACreditCard"], delete = localization["Delete"];
	ViewBag.Title = deleteACreditCard;
	ViewBag.AdditionalStylesheets = new string[] { "Management", "ManagementAccount.DeleteCard" };
	ViewBag.IsBackButtonEnabled = true;
	ViewBag.PreviousPage = Url.Action("MyCards");
}
<md:dialog isFullScreen="false" type="confirmation">
	<form action="@Url.Action("DeleteCard")" method="post">
		<md:dcontentarea>
			<md:h6>@deleteACreditCard</md:h6>
			<md:h6>@areYouSureYouWantToDeleteThis</md:h6>
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Id).ToString()]</md:subtitle2>
			<md:subtitle1>@Model.Id</md:subtitle1>
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Brand).ToString()]</md:subtitle2>
			<md:paper>
				<md:image>
					<img src="~/png/@(brand.Replace(" ", string.Empty))_400x250.png" />
				</md:image>
				<md:subtitle1>@brand</md:subtitle1>
			</md:paper>
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Last4).ToString()]</md:subtitle2>
			<md:subtitle1>•••• •••• •••• @Model.Last4</md:subtitle1>
			<md:subtitle2>@localization[Html.DisplayNameFor(model => model.Expiration).ToString()]</md:subtitle2>
			<md:subtitle1>@Model.Expiration</md:subtitle1>
		</md:dcontentarea>
		<md:dactionarea alignment="horizontal">
			<md:dbutton>
				<button>@delete</button>
			</md:dbutton>
		</md:dactionarea>
	</form>
</md:dialog>